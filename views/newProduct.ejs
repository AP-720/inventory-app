<html>
	<%- include('./partials/head.ejs') %>
	<body>
		<div class="page-container">
			<div class="header-container">
				<h1>Coffee Inventory</h1>
				<div class="nav-container">
					<a href="/products">Back to Products</a>
					<a href="/categories">Categories</a>
					<a href="/">Home</a>
				</div>
			</div>
			<div class="body-container">
				<h2 class="section-header"><%= title %></h2>
				<%- include('./partials/errors.ejs') %>
				<div class="product-edit-container">
					<form class="product-edit-form" action="new" method="post">
						<label for="coffee_name">Name:</label>
						<input type="text" name="coffee_name" id="coffee_name" required />
						<label for="roaster_name">Roaster:</label>
						<input type="text" name="roaster_name" id="roaster_name" required />
						<label for="roaster_country">Roaster Country:</label>
						<input
							type="text"
							name="roaster_country"
							id="roaster_country"
							required
						/>
						<label for="origin">Origin Country:</label>
						<input type="text" name="origin" id="origin" required />
						<label for="process">Process:</label>
						<input type="text" name="process" id="process" required />
						<fieldset>
							<legend>Variety:</legend>
							<% varieties.forEach((variety) => { %>
							<div>
								<input
									type="checkbox"
									name="varieties"
									id="<%= variety.name %>"
									value="<%= variety.name %>"
								/>
								<label for="<%= variety.name %>"><%= variety.name %></label>
							</div>
							<% }); %>
						</fieldset>
						<label for="tasting_notes">Tasting Notes:</label>
						<input
							type="text"
							name="tasting_notes"
							id="tasting_notes"
							required
						/>
						<label for="roast_style">Roast Style:</label>
						<select name="roast_style" id="roast_style">
							<% roastsStyles.forEach((roast) => { %>
							<option value="<%= roast.style %>"><%= roast.style %></option>
							<% }); %>
						</select>
						<label for="roast_type">Roast Type:</label>
						<select name="roast_type" id="roast_type">
							<% roastsType.forEach((roast) => { %>
							<option value="<%= roast.type %>"><%= roast.type %></option>
							<% }); %>
						</select>
						<label for="price">Price:</label>
						<input
							type="number"
							name="price"
							id="price"
							step="0.01"
							min="0"
							required
						/>
						<fieldset>
							<legend>Category:</legend>
							<% categories.forEach((category) => { %>
							<div>
								<input
									type="checkbox"
									name="categories"
									id="<%= category.category %>"
									value="<%= category.category %>"
								/>
								<label for="<%= category.category %>"
									><%= category.category %></label
								>
							</div>
							<% }); %>
						</fieldset>
						<button type="submit">Add</button>
					</form>
				</div>
			</div>
		</div>
	</body>
</html>
